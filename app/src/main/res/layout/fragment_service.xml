<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808083"
    tools:context=".ServiceFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="613dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/rectangle_white" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="336dp"
        android:layout_height="489dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="225dp"
        android:src="@drawable/rectangle_grey" />

    <ScrollView
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="240dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/PlombierChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="217dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/plombier" />

                <TextView
                    android:layout_width="274dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/archivo_black"
                    android:text="Plombier"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MecanicienChoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/mecancien" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="274dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/archivo_black"
                    android:text="Mécanicien"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ClimaticienChoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/climaticien" />

                <TextView
                    android:layout_width="274dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/archivo_black"
                    android:text="Climaticien"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ElectricienChoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="217dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/electricien" />

                <TextView
                    android:layout_width="274dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/archivo_black"
                    android:text="Electricien"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/MaconChoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagemacon"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/macon" />

                <TextView
                    android:id="@+id/textmacon"
                    android:layout_width="274dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/archivo_black"
                    android:text="Maçon"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/Login"
        android:layout_width="338dp"
        android:layout_height="124dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/archivo_black"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="329dp"
        android:layout_height="56dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/archivo_black"
        android:text="Choisir le service que vous allez offrir"
        android:textColor="#007AFF"
        android:textSize="23sp" />

</FrameLayout>
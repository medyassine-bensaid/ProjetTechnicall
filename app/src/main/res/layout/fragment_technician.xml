<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#808083"
    tools:context=".TechnicianFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="132dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/rectangle_white" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="352dp"
        android:layout_height="101dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/rectangle_grey" />

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="352dp"
        android:layout_height="101dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilepicture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_shape"
            android:src="@drawable/img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/archivo_black"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="352dp"
        android:layout_height="262dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/rectangle_grey">

        <TableRow
            android:layout_width="352dp"
            android:layout_height="95dp">

            <LinearLayout
                android:layout_width="176dp"
                android:layout_height="131dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="176dp"
                        android:layout_height="77dp"
                        android:src="@drawable/msgs" />

                    <TextView
                        android:id="@+id/CallText"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/poppins"
                        android:text="Mes Messages"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="176dp"
                    android:layout_height="77dp"
                    android:layout_marginRight="300dp"
                    android:src="@drawable/telephone" />

                <TextView
                    android:id="@+id/MsgText"
                    android:layout_width="118dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/poppins"
                    android:text="Mes Appels"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="176dp"
                android:layout_height="131dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rdvButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagerdv"
                        android:layout_width="176dp"
                        android:layout_height="77dp"
                        android:src="@drawable/rdv" />

                    <TextView
                        android:id="@+id/RdvText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/poppins"
                        android:text="Mes Rendez-vous"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Services"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageservice"
                    android:layout_width="176dp"
                    android:layout_height="77dp"
                    android:layout_marginRight="300dp"
                    android:src="@drawable/service" />

                <TextView
                    android:id="@+id/ServiceText"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/poppins"
                    android:text="Services"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</FrameLayout>
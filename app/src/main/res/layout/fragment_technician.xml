<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808083"
    tools:context=".ServiceFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/rectangle_white" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="352dp"
        android:layout_height="101dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/rectangle_grey" />

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="101dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/archivo_black"
                android:text="Hey!!!!!"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Technician" />

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="352dp"
        android:layout_height="262dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/rectangle_grey">

        <TableRow
            android:layout_width="284dp"
            android:layout_height="95dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="182dp"
                android:layout_height="65dp"
                android:layout_marginRight="300dp"
                android:layout_weight="100dp"
                android:src="@drawable/msgs" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginRight="300dp"
                android:layout_weight="88dp"
                android:src="@drawable/telephone" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="196dp"
                android:layout_height="61dp"
                android:layout_marginRight="300dp"
                android:src="@drawable/service" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="300dp"
                android:src="@drawable/rdv" />
        </TableRow>
    </TableLayout>

</FrameLayout>